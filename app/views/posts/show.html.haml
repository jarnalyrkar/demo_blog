.container.content
	%h1= @post.title
	%p= @post.content

	= link_to t("default.edit"), edit_post_path, class: "btn btn-primary"
	= link_to t("default.delete"), post_path, method: :delete, class: "btn btn-danger"
	.row
		.col-12
			= t("post.comment.comment", :count => @post.comments.count)
			%hr
			= render @post.comments
			%hr
			%h3= t("post.comment.leave_a_reply")
			= render 'comments/form'